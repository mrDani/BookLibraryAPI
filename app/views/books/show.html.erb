<div class="container text-center">
  <div class="card p-4">
    <% if @book.cover_url %>
      <img src="<%= @book.cover_url %>" class="rounded mx-auto d-block" alt="<%= @book.title %>" style="max-width: 300px;">
    <% end %>
    <div class="card-body">
      <h1 class="text-dark"><%= @book.title %></h1>
      <h3 class="text-muted">by <%= link_to @book.author.name, author_path(@book.author), class: "text-info" %></h3>
      <p class="lead">Published Year: <%= @book.published_year %></p>

      <h4>Genres:</h4>
      <% @book.genres.each do |genre| %>
        <span class="badge badge-primary"><%= genre.name %></span>
      <% end %>

    </div>
  </div>
  <%= link_to '⬅️ Go Back', request.referer || books_path, class: 'btn btn-secondary mt-4' %>

</div>
